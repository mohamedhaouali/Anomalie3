{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Applications list</h1>

     <table class="table table-striped table-hover">
        <thead>
            <tr>

                <th>Titre</th>
                <th>Description</th>
                <th>Module</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>
             
                <td>{{ application.titre1 }}</td>
                <td>{{ application.description }}</td>
                <td> {{ application.nom1 }}</td>
                  
                
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('application_show', { 'id': application.id }) }}" class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('application_edit', { 'id': application.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('application_new') }}" class="btn btn-success">Ajout d'un nouvelle application</a>
        </li>
    </ul>
{% endblock %}
