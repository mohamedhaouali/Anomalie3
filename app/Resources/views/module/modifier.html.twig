{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    
    <h1>Modules list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                 <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
         {% for module in modules %}
            <tr>
                <td><a href="{{ path('module_show', { 'id': module.id }) }}">{{ module.id }}</a></td>
                <td>{{ module.nom1 }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('module_show', { 'id': module.id }) }}"class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('module_edit', { 'id': module.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('module_new') }}" class="btn btn-success">Ajout d'un nouvelle module</a>
        </li>
    </ul>
{% endblock %}
























