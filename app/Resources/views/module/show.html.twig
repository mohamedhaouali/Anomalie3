{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Module</h1>

    <table class="table table-striped table-hover">
        <tbody>

            <tr>
                <th>Nom</th>
                <td>{{ module.nom1 }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('module_modifier') }}"class="btn btn-info">Retour a la page Modifier</a>
        </li>
        <li>
            <a href="{{ path('module_edit', { 'id': module.id }) }}" class="btn btn-success">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Supprimer" />
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
