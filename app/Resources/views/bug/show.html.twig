{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reclamtion</h1>

     <table class="table table-striped table-hover">
        <tbody>
       
            <tr>
                <th>Titre</th>
                <td>{{ bug.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bug.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if bug.date %}{{ bug.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ bug.client }}</td>
            </tr>
            
             <tr>
                <th>Application</th>
                <td>{{ bug.titre1 }}</td>
            </tr>
            
              <tr>
                <th>Module</th>
                <td>{{ bug.nom1 }}</td>
            </tr>
            
           
            <tr>
             <td> <img src="{{asset('uploads/'~bug.path)}}" alt="DevAndClick" width="300" height="300"></td>
             
             
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bug_modifier') }}"class="btn btn-info">Retour a la page Modifier</a>
        </li>
        <li>
            <a href="{{ path('bug_edit', { 'id': bug.id }) }}" class="btn btn-success">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Supprimer" />
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
