{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Client</h1>

    <table class="table table-striped table-hover">
        <tbody>
 
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ client.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ client.description }}</td>
            </tr>
            
              <tr>
                <th>Description</th>
                <td>{{ client.nom1 }}</td>
            </tr>
            
              <tr>
                <th>Description</th>
                <td>{{ client.titre1 }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('client_modifier') }}"class="btn btn-info">Retour a la page Modifier</a>
        </li>
        <li>
            <a href="{{ path('client_edit', { 'id': client.id }) }}" class="btn btn-success">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Supprimer" />
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
