{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Clients list</h1>

     <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Application</th>
                <th>Module</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                 <td><a href="{{ path('client_show', { 'id': client.id }) }}">{{ client.id }}</a></td>
                <td>{{ client.nom }}</td>
                <td>{{ client.titre }}</td>
                <td>{{ client.description }}</td>
                <td>{{ client.nom1 }}</td>
                <td>{{ client.titre1 }}</td>
                
          
               
            <td>
                    <ul>
                        <li>
                            <a href="{{ path('client_show', { 'id': client.id }) }}" class="btn btn-info"><i class="icon-book"></i>Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('client_edit', { 'id': client.id }) }}" class="btn btn-danger"><i class="icon-edit"></i>edit</a>
                        </li>
                    </ul>
                </td>  
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('client_new') }}" class="btn btn-success">Ajout d'un nouveaux Client</a>
        </li>
    </ul>
{% endblock %}
























