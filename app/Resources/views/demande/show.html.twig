{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Suivi des demandes </h1>

 <table class="table table-striped table-hover">
        <tbody>
         
            <tr>
                <th>Titre</th>
                <td>{{ demande.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ demande.description }}</td>
            </tr>
         
             <tr>
                <th>Intervenant</th>
                <td>{{ demande.nom4 }}</td>
            </tr>
            
             <tr>
                <th>Client</th>
                <td>{{ demande.nom }}</td>
            </tr>
            
               <tr>
                <th>Application</th>
                <td>{{ demande.titre1 }}</td>
            </tr>
            
                  <tr>
                <th>Module</th>
                <td>{{ demande.titre1 }}</td>
            </tr>
            
          <tr>
                <th>Etat</th>
                <td>{% if demande.etat %}<font color="green">En Cours</font>{% else %}<font color="red">Finit</font>{% endif %}</td>
            </tr>
            
       
            
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('demande_modifier') }}"class="btn btn-info">Retour a la page Modifier</a>
        </li>
        <li>
            <a href="{{ path('demande_edit', { 'id': demande.id }) }}" class="btn btn-success">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Supprimer" />
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
